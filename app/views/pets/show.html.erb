<h1><%= @pet.name %></h1>
<%= image_tag @pet.image_url, id: "petimg-#{@pet.id}", size: "200x200" %>
<p><%=  @pet.description %></p>
<p><%=  @pet.approximate_age %></p>
<p><%=  @pet.sex %></p>
<p><%=  @pet.name %> is <%= @pet.adoption_status %></p>
<%= link_to "Update Pet", "/pets/#{@pet.id}/edit" %><br/>
<%= link_to "Delete Pet", "/pets/#{@pet.id}", method: :delete %>
