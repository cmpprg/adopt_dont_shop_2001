<h1>Adoptable Pets:</h1>
<%= link_to "Create Pet", "/shelters/#{@shelter.id}/pets/new" %><br/>
<% @shelter.adoptable_pets.each do |pet| %>
  <%= image_tag pet.image_url, id: "petimg-#{pet.id}", size: "200x200" %>
  <p>Name: <%= pet.name %></p>
  <p>Age: <%= pet.approximate_age %></p>
  <p>Sex: <%= pet.sex %></p>
<% end %>
