<h1>New Pet Creation Form</h1>
<%= form_tag "/shelters/#{@shelter.id}/pets" do%>
<%= label_tag :image_url %><br/>
<%= text_field_tag :image_url %><br/>

<%= label_tag :name %><br/>
<%= text_field_tag :name %><br/>

<%= label_tag :description %><br/>
<%= text_field_tag :description %><br/>

<%= label_tag :approximate_age %><br/>
<%= text_field_tag :approximate_age %><br/>

<%= label_tag :sex %><br/>
<%= text_field_tag :sex %><br/>
<%= submit_tag "Create Pet" %>
<% end %>
